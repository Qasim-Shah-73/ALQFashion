<h1>Products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th></th>
  </tr>

  <% @products.each do |p| %>
    <tr>
      <td><%= p.name %></td>
      <td><%= p.price %></td>
      <td><%= link_to 'Show', product_path(p) %></td>
    </tr>
  <% end %>
</table>

<%= button_to "Add Product", new_product_path, method: :get %>
